<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Evidencija avio karata", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Karte", "Index", "Karte")</li>
                    <li>@Html.ActionLink("Kompanije", "Index", "Kompanije")</li>
                    <li>@Html.ActionLink("Destinacije", "Index", "Destinacije")</li>
                    <li>@Html.ActionLink("Kupci", "Index", "Kupci")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main">
        @RenderBody()
        <footer class="footer navbar-fixed-bottom">
            <p class="footer-paragraph">&copy; @DateTime.Now.Year - Radosavljević Jovan SI 4/18  Dadić Nikola SI 22/18  Vlaović Milica 32/18</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
